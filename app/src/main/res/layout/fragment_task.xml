<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.MeetingFragment">

    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20sp"
                    android:text="Add Task"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_user_phone_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/user_name"
                    android:inputType="text"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:hint="Task Title"
                    android:drawableTint="@color/colorDeepGrey"
                    android:drawableEnd="@drawable/ic_call_black_24dp"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_user_birth_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/user_birth"
                    android:inputType="text"
                    android:singleLine="true"
                    android:hint="DD-MM-YYYY"
                    android:drawableTint="@color/colorDeepGrey"
                    android:drawableEnd="@drawable/ic_call_black_24dp"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/task_priority"
                android:entries="@array/task_priority_array"
                android:background="@drawable/layer_list_spinner"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/task_status"
                android:entries="@array/task_status_array"
                android:background="@drawable/layer_list_spinner"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_product_description"
                style="@style/OutlinedRoundedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/product_description"
                    android:gravity="top"
                    android:hint="Description"
                    android:inputType="text|textMultiLine"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorLightGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Attachment"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/add_attachment_button"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_baseline_attach_file_24"
                    android:layout_alignParentEnd="true"
                    android:rotation="90"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_attachment"
                tools:listitem="@layout/item_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorLightGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Record"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/add_record_button"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_baseline_mic_24"
                    android:layout_alignParentEnd="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_record"
                tools:listitem="@layout/item_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/add_product_button"
                android:text="Add Task"
                android:textColor="@color/colorWhite"
                app:cornerRadius="25dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>